<ul>
  <li><%= link_to "アカウント", account_path %></li>
  <li><%= link_to "プロフィール", profile_path %></li>
</ul>
<%= render "shared/flash" %>
<div><%= image_tag("#{current_user.image}") %></div>
<%= form_for current_user, url: {action: 'profile_update'} do |f| %>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction %>
  </div>
 
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>