<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-white sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column">
          <li class="nav-item"><%= link_to "アカウント", account_path, class: "nav-link" %></li>
          <li><%= link_to "プロフィール", profile_path, class: "nav-link active" %></li>
        </ul>
      </div>
    </nav>
  <%= render "shared/flash" %>
    <div class="col-md-9 bg-light">
      <h5>プロフィール設定</h5>
      <div><%= image_tag("#{current_user.image}") %></div>
      
      <%= form_for current_user, url: {action: 'profile_update'} do |f| %>
        <div class="form-group row">
          <%= f.label :image, class: "col-sm-2 col-form-label", for: "exampleImage" %>
          <div class="col-sm-10">
            <%= f.file_field :image, class: "form-control-file", id: "exampleImage" %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :name, class: "col-sm-2 col-form-label", for: "exampleName" %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", id: "exampleName" %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :introduction, class: "col-sm-2 col-form-label", for: "exampleIntroduction" %>
          <div class="col-sm-10">
            <%= f.text_area :introduction, rows: 5, class: "form-control", id: "exampleIntroduction" %>
          </div>
        </div>
       
        <div class="form-group row">
          <%= f.submit "更新", class: "btn btn-primary w-20" %>
        </div>
      <% end %>
    </div>
  </div>
</div>