<div class="d-flex">
  <%= form_with url: search_rooms_path, class: "form-inline", method: :get, local: true do |f| %>
    <%= f.text_field :area, class: "form-control mr-sm-2", placeholder: "エリア" %>
    <%= f.text_field :keyword, class: "form-control mr-sm-2", placeholder: "キーワード" %>
    <%= f.submit "検索", class: "btn btn-primary my-2 my-sm-0" %>
  <% end %>
</div>
