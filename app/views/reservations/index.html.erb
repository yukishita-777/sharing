<div class="container">
  <h4 class="pb-4">予約済みルーム一覧</h4>
      <table class="table">
        <thead>
          <tr align="center">
            <th>ルーム画像</th>
            <th>ルーム名</th>
            <th>ルーム紹介</th>
            <th>合計料金</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>予約確定日時</th>
          </tr>
        </thead>
        <% @reservations.each do |reservation| %>
        <tbody>
          <tr align="center">
            <td class="align-middle">
              <%= link_to room_path(reservation.room.id) do %><%= image_tag("#{reservation.room.image}") %><% end %>
            </td>
            <td class="align-middle"><%= link_to room_path(reservation.room.id) do %><%= reservation.room.name %><% end %></td>
            <td class="align-middle"><%= reservation.room.introduction %></td>
            <td class="align-middle"><%= reservation.number.to_i * reservation.room.fee.to_i %></td>
            <td class="align-middle"><%= reservation.start_day %></td>
            <td class="align-middle"><%= reservation.finish_day %></td>
            <td class="align-middle"><%= reservation.created_at %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
</div>