  <div class="container">
    <%= render "shared/error", obj: @reservation %>
    <div class="row">
        <div class="room-show-nav">
          <h4>予約内容確認</h4>
          <h5 class="price-icon"><span>¥</span><%= @room.fee %>/日</h5>
            <%= form_with model: [@room, @reservation] do |f| %>
            <div class="form-group row">
              <%= f.label :start_day, "開始日", class: "col-sm-3 col-form-label", for: "exampleSd" %>
              <div class="col-sm-10">
                <%= f.date_field :start_day, class: "form-control", id: "exampleSd", value: @reservation.start_day, readonly: true %>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :finish_day, "終了日", class: "col-sm-3 col-form-label", for: "exampleFd" %>
              <div class="col-sm-10">
                <%= f.date_field :finish_day, class: "form-control", id: "exampleFd", value: @reservation_finish_day, readonly: true  %>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :number, "人数", class: "col-sm-3 col-form-label", for: "exampleNumber" %>
              <div class="col-sm-10">
                <%= f.number_field :number, class: "form-control", id: "exampleNumber", value: @reservation_number, readonly: true %>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :reservation_amount_total, "合計金額", class: "col-sm-3 col-form-label", for: "exampleTotal" %>
              <div class="col-sm-10">
                <%= f.number_field :reservation_amount_total, class: "form-control", id: "exampleTotal", value:  @room.fee.to_i * @reservation_number.to_i, readonly: true %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-10">
                <%= f.submit "予約を確定", class: "btn btn-primary w-50" %>
              </div>
            </div>
            <% end %>
            <%= link_to "ルーム詳細に戻る", room_path(@room.id) %>
        </div>
    </div>  
  </div>
