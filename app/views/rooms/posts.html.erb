<div class="container">
  <h4 class="pb-4">登録済みルーム一覧</h4>
    <table class="table">
      <thead>
        <tr align="center">
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>料金</th>
          <th>住所</th>
          <th>作成日</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr align="center">
            <td class="align-middle"><%= image_tag("#{room.image}") %></td>
            <td class="align-middle"><%= room.name %></td>
            <td class="align-middle"><%= room.introduction %></td>
            <td class="align-middle"><%= room.fee %></td>
            <td class="align-middle"><%= room.address %></td>
            <td class="align-middle"><%= room.created_at %></td>
            <td class="align-middle">
              <%= link_to "編集", edit_room_path(room) %>
            </td>
            <td class="align-middle">
              <%= link_to "削除", room_path(room), method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>