<!DOCTYPE html>
<html>
  <head>
    <title>Sharing</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>
    <header class="mb-10">
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
        <a href="/" class="navbar-brand">Sharing</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <% if user_signed_in? %>
              <ul class="navbar-nav">
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    メニュー
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <%= link_to "ルーム登録", new_room_path, class: "dropdown-item" %>
                    <%= link_to "予約済みルーム一覧", reservations_path, class: "dropdown-item" %>
                    <%= link_to "登録済みルーム一覧", posts_rooms_path, class: "dropdown-item" %>
                    <%= link_to "設定", account_path, class: "dropdown-item" %>
                    <%= link_to "ログアウト", destroy_user_session_path, class: "dropdown-item", method: :delete %>
                  </div>
                </li>
              </ul>
            <% else %>
              <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    メニュー
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <%= link_to "ログイン", new_user_session_path, class: "dropdown-item" %>
                    <%= link_to "新規登録", new_user_registration_path, class: "dropdown-item" %>
                  </div>
                </li>
              </ul>
            <% end %>
        </div>
        <%= render "shared/search_form" %>
      </nav>
    </header>
    <main>
      <%= render "shared/flash" %>
      <%= yield %>
    </main>
      <footer class="text-center fixed-bottom">
        Copyright @yukishita
      </footer>
  </body>
</html>
